#!/usr/bin/env python3
"""
Agency Dashboard Server
Serves the Software Factory Dashboard on localhost
"""

import http.server
import socketserver
import os
import webbrowser
from pathlib import Path

PORT = 8080
DASHBOARD_DIR = "/data/.openclaw/workspace/agency/dashboard"

class DashboardHandler(http.server.SimpleHTTPRequestHandler):
    def __init__(self, *args, **kwargs):
        super().__init__(*args, directory=DASHBOARD_DIR, **kwargs)
    
    def log_message(self, format, *args):
        # Custom logging
        print(f"ğŸŒ [Dashboard] {args[0]}")
    
    def end_headers(self):
        # Add CORS headers for development
        self.send_header('Access-Control-Allow-Origin', '*')
        super().end_headers()

def start_dashboard():
    """Start the dashboard server"""
    os.chdir(DASHBOARD_DIR)
    
    with socketserver.TCPServer(("", PORT), DashboardHandler) as httpd:
        print(f"""
    ğŸ­ AI APP AGENCY DASHBOARD
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    
    ğŸŒ Dashboard URL: http://localhost:{PORT}
    ğŸ“ Serving from: {DASHBOARD_DIR}
    
    Press Ctrl+C to stop the server
    
        """)
        
        # Try to open browser
        try:
            webbrowser.open(f"http://localhost:{PORT}")
            print("ğŸš€ Opening dashboard in browser...")
        except:
            print(f"ğŸ‘‰ Please open http://localhost:{PORT} manually")
        
        try:
            httpd.serve_forever()
        except KeyboardInterrupt:
            print("\nğŸ‘‹ Dashboard server stopped")

if __name__ == "__main__":
    start_dashboard()
